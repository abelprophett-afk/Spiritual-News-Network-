<script>
    // Simple password - change this to whatever you want
    const ADMIN_PASSWORD = 'heartforge2025';
    let isAdmin = false;
    let messages = [];

    // Check if already logged in
    if (localStorage.getItem('adminAuth') === ADMIN_PASSWORD) {
        isAdmin = true;
    }

    // Admin functions
    function showAdminLogin() {
        if (isAdmin) {
            document.getElementById('adminPanel').classList.remove('hidden');
        } else {
            document.getElementById('adminLoginPanel').classList.remove('hidden');
        }
    }

    function adminLogin() {
        const password = document.getElementById('adminPassword').value;
        if (password === ADMIN_PASSWORD) {
            isAdmin = true;
            localStorage.setItem('adminAuth', ADMIN_PASSWORD);
            document.getElementById('adminLoginPanel').classList.add('hidden');
            document.getElementById('loginError').classList.add('hidden');
            document.getElementById('adminPanel').classList.remove('hidden');
            document.getElementById('adminPassword').value = '';
        } else {
            document.getElementById('loginError').classList.remove('hidden');
        }
    }

    function adminLogout() {
        isAdmin = false;
        localStorage.removeItem('adminAuth');
        document.getElementById('adminPanel').classList.add('hidden');
    }

    function closeAdminPanel() {
        document.getElementById('adminLoginPanel').classList.add('hidden');
        document.getElementById('adminPanel').classList.add('hidden');
    }

    function adminPostMessage() {
        const input = document.getElementById('adminMessageInput');
        const text = input.value.trim();
        if (!text) return;

        const message = {
            id: Date.now(),
            text: text,
            timestamp: new Date().toLocaleString(),
            author: 'HOMEFORGE'
        };

        messages.unshift(message);
        localStorage.setItem('homeforge_public_messages', JSON.stringify(messages));
        input.value = '';
        renderMessages();
        
        // Show success feedback
        const btn = event.target;
        const originalText = btn.textContent;
        btn.textContent = 'POSTED!';
        btn.classList.add('bg-green-600');
        setTimeout(() => {
            btn.textContent = originalText;
            btn.classList.remove('bg-green-600');
        }, 2000);
    }

    // Load and render messages
    function loadMessages() {
        const stored = localStorage.getItem('homeforge_public_messages');
        if (stored) {
            try {
                messages = JSON.parse(stored);
                renderMessages();
            } catch (e) {
                messages = [];
            }
        }
    }

    function deleteMessage(id) {
        if (!isAdmin) return;
        if (confirm('Delete this message?')) {
            messages = messages.filter(m => m.id !== id);
            localStorage.setItem('homeforge_public_messages', JSON.stringify(messages));
            renderMessages();
        }
    }

    function renderMessages() {
        const container = document.getElementById('messages');
        if (messages.length === 0) {
            container.innerHTML = `
                <div class="bg-black/30 border border-purple-700 rounded p-4">
                    <div class="text-sm text-purple-400 mb-2">Welcome</div>
                    <p>HOMEFORGE is live. This is your sacred space outside the noise.</p>
                </div>
            `;
            return;
        }

        container.innerHTML = messages.map(msg => `
            <div class="bg-black/30 border border-purple-700 rounded p-4">
                <div class="flex justify-between items-start mb-2">
                    <div>
                        <div class="text-sm font-bold text-purple-300">${msg.author || 'HOMEFORGE'}</div>
                        <div class="text-xs text-purple-400">${msg.timestamp}</div>
                    </div>
                    ${isAdmin ? `
                    <button onclick="deleteMessage(${msg.id})" class="text-purple-400 hover:text-red-400">
                        <i class="fas fa-times"></i>
                    </button>
                    ` : ''}
                </div>
                <p class="whitespace-pre-wrap">${msg.text}</p>
            </div>
        `).join('');
    }

    // Load messages on page load
    document.addEventListener('DOMContentLoads', loadMessages);
</script>

